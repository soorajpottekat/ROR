<h1>Angular portfolio items</h1>
<%= link_to "Create New Item", new_portfolio_path %>
<% @angular_portfolio_items.each do |portfolio| %>
    <p><%=link_to portfolio.title, portfolio_show_path(portfolio) %></p>
    <em><%= portfolio.subtitle %></em>
    <p><%=portfolio.body%></p>
    <%=image_tag portfolio.thumb_image unless portfolio.thumb_image.nil?%>
 <%=link_to "Edit", edit_portfolio_path(portfolio) %>   <%= link_to 'Delete', portfolio_path(portfolio), method: :delete, data: { confirm: 'Are you sure?' } %>

<% end %>